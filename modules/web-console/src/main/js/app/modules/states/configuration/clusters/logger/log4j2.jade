include ../../../../../../app/helpers/jade/mixins.jade

-var model = 'backupItem.logger.Log4j2'
-var form = 'loggerLog4j2'

div
    .details-row
        +dropdown('Level:', model + '.level', 'log4j2Level', 'true', 'Default',
            '[\
                {value: "OFF", label: "OFF"},\
                {value: "FATAL", label: "FATAL"},\
                {value: "ERROR", label: "ERROR"},\
                {value: "WARN", label: "WARN"},\
                {value: "INFO", label: "INFO"},\
                {value: "DEBUG", label: "DEBUG"},\
                {value: "TRACE", label: "TRACE"},\
                {value: "ALL", label: "ALL"},\
                {value: undefined, label: "Default"}\
            ]',
            'Level for internal log4j2 implementation')
    .details-row
        +dropdown-required('Logger configuration:', model + '.mode', 'log4j2Mode', 'true', 'true', 'Choose logger mode',
            '[\
                {value: "Logger", label: "Logger"},\
                {value: "Path", label: "Path"}\
            ]',
            'Choose logger configuration\
            <ul>\
                <li>Logger - created logger object</li>\
                <li>Path - path or URI to XML configuration</li>\
            </ul>')
    .details-row(ng-if='#{model}.mode === "Logger"')
        +java-class('Logger:', model + '.logger', 'log4j2Logger', 'true', 'true', 'Logger implementation for use')
    .details-row(ng-if='#{model}.mode === "Logger"')
        +java-class('Console logger:', model + '.consoleLogger', 'log4j2ConsoleLogger', 'true', 'false', 'Console logger')
    .details-row(ng-if='#{model}.mode === "Path"')
        +text('Path:', model + '.path', 'log4j2Path', 'true', 'Input path', 'Path or URI to XML configuration')
